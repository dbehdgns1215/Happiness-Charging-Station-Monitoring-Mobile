<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        tools:context=".View.MainActivity">

    <!-- 맵 화면 -->
    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.naver.maps.map.MapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_nav"
            android:background="#E0E0E0" />

    <!-- 정보 스크롤 뷰 -->
    <ScrollView
            android:id="@+id/info_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="@android:color/white"
                android:divider="?android:attr/dividerVertical"
                android:showDividers="middle">

            <TextView
                    android:id="@+id/charger_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="충전소 이름: "
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#333333" />

            <TextView
                    android:id="@+id/city1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="광역시/도: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/city2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시군구: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/address_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="도로명 주소: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/address_old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구 주소: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/address_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세 주소: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/weekday_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평일 운영 시간: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/weekday_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="평일 마감 시간: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/saturday_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="토요일 운영 시간: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/saturday_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="토요일 마감 시간: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/holiday_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일요일/공휴일 운영 시간: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/holiday_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="일요일/공휴일 마감 시간: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/charger_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="충전기 수: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/charge_air_yn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="에어 충전 가능: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/charge_phone_yn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="휴대폰 충전 가능: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/call_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관리 담당 전화번호: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/updated_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="충전소 정보 업데이트 날짜: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/created_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="데이터 생성일: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <TextView
                    android:id="@+id/modified_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="데이터 수정일: "
                    android:textSize="16sp"
                    android:textColor="#666666" />

            <Button
                    android:id="@+id/btn_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닫기"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#FF5722"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center" />

            <Button
                    android:id="@+id/btn_add_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="리뷰 추가"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center" />
        </LinearLayout>
    </ScrollView>

    <!-- 검색 버튼: 지도와 네비게이션 바 사이에 걸쳐서 위치 -->
    <ImageButton
            android:id="@+id/btn_search"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginBottom="-35dp"
            android:elevation="12dp"
            android:src="@android:drawable/ic_menu_search"
            android:background="@drawable/rounded_button_background"
            android:contentDescription="Search"
            app:layout_constraintBottom_toTopOf="@id/bottom_nav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

    <!-- 하단 네비게이션 바 -->
    <LinearLayout
            android:id="@+id/bottom_nav"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_mapmode"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Home" />

        <ImageButton
                android:id="@+id/btn_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_edit"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Profile"
                android:onClick="openProfilePage" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>